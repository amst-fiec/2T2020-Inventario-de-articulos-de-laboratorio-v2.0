<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registro_laboratorio">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center_horizontal"
        android:text="Formulario para registro de laboratorio"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editNombreLab"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Ingrese el nombre del laboratorio"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text=""
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/editDescripcionLab"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Ingrese la descripción del laboratorio"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text=""
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/editUbicacionLab"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Ingrese la ubicación del laboratorio"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text=""
        tools:ignore="Autofill" />

    <Button
        android:id="@+id/btn_guardarLab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_active"
        android:onClick="guardarLab"
        android:paddingTop="28dp"
        android:paddingBottom="28dp"
        android:text="Guardar laboratorio"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>