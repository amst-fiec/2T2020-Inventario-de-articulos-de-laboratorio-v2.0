<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registroEquipo">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center_horizontal"
        android:text="Formulario para registro de equipo"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editNombreEquipo"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Ingrese el nombre del equipo"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text=""
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/editInventario"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Ingrese el tipo de inventario"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text=""
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/editMarcaEquipo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Ingrese la marca del equipo"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text=""
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/editModeloEquipo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Ingrese el modelo del equipo"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text=""
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/editDescripcionEquipo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Ingrese la descripciÃ³n del equipo"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text=""
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/editResponsableEquipo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Ingrese el nombre del responsable del equipo"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text=""
        tools:ignore="Autofill" />

    <Button
        android:id="@+id/btn_registrar_equipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_active"
        android:onClick="registrarEquipo"
        android:paddingTop="28dp"
        android:paddingBottom="28dp"
        android:text="Registrar equipo"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />


</LinearLayout>